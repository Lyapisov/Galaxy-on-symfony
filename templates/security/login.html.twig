    {% block body %}
        <div class="backForCabinet">
            <div class="user">
                <form class="formlogin" action="#" method="post">
                    {% if error %}
                        <ul><li>{{ error.messageKey|trans(error.messageData, 'security') }}</li></ul>
                    {% endif %}

                    {% if app.user %}
                        <h3>
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </h3>
                    {% endif %}

                    <h2>Войдите на сайт</h2>
                    <input type="email" value="{{ last_username }}" name="email" placeholder="E-mail" id="inputEmail" class="form-control" required autofocus>
                    <input type="password" name="password" placeholder="Пароль" id="inputPassword" class="form-control" required>
                    <input id="submit" type="submit" name="submit" value="Войти">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <p>или пройдите<br><a href="/user/register/">Регистрацию</a></p>
                </form>
            </div>
        </div>
    {% endblock %}
